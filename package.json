{
  "name": "rescript-derive-builder",
  "version": "1.0.0",
  "description": "Automatic builder pattern generation for ReScript using @@deriving(builder)",
  "scripts": {
    "clean": "rimraf **/__generated__ && rimraf **/lib && rescript clean ",
    "res:build": "rescript",
    "res:clean": "rescript clean",
    "res:dev": "rescript watch",
    "res:format": "rescript format src/*.{res,resi} tests/**/*.res",
    "res:test": "rescript && mocha lib/es6/tests/unit/**/*_test.res.mjs",
    "res:it": "npm run clean && rescript && mocha lib/es6/tests/it/**/*_it.res.mjs --timeout 30000",
    "test": "npm run res:test && npm run res:it",
    "build": "rescript",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "bin": "./bin/cli.js",
  "main": "lib/es6/src/Codegen.res.mjs",
  "files": [
    "bin/",
    "lib/es6/src",
    "README.md",
    "rescript.json"
  ],
  "keywords": [
    "rescript",
    "builder-pattern",
    "code-generation",
    "deriving"
  ],
  "author": "Nathan Tranquilla <n1tranquilla@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nathan-tranquilla/rescript-derive-builder.git"
  },
  "bugs": {
    "url": "https://github.com/nathan-tranquilla/rescript-derive-builder/issues"
  },
  "homepage": "https://github.com/nathan-tranquilla/rescript-derive-builder#readme",
  "dependencies": {
    "glob": "^12.0.0",
    "rescript": "^12.0.0",
    "rescript-nodejs": "^16.1.0",
    "rimraf": "^6.1.2"
  },
  "devDependencies": {
    "mocha": "^11.7.5"
  }
}
